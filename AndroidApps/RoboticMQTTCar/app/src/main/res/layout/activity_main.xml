<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tyagiabhinav.roboticcarcontrol.MainActivity">

    <ImageView
        android:id="@+id/btn_st"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_margin="4dp"
        android:onClick="actionStop"
        android:src="@drawable/stop" />

    <ImageView
        android:id="@+id/btn_fw"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/btn_st"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:onClick="actionForward"
        android:src="@drawable/forward" />

    <ImageView
        android:id="@+id/btn_bw"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn_st"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:onClick="actionBackward"
        android:src="@drawable/backward" />

    <ImageView
        android:id="@+id/btn_lt"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:layout_toLeftOf="@id/btn_st"
        android:onClick="actionLeft"
        android:src="@drawable/left" />

    <ImageView
        android:id="@+id/btn_rt"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/btn_st"
        android:onClick="actionRight"
        android:src="@drawable/right" />


</RelativeLayout>
